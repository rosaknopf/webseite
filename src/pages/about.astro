---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../data/siteConfig";
import { getEntry } from "astro:content";
import { Image } from "astro:assets";

const aboutPage = await getEntry("pages", "about");

if (!aboutPage) {
    throw new Error("About page content not found");
}

const { Content } = await aboutPage.render();
const { title, mainHeading, quote, heroImage } = aboutPage.data;
---

<Layout
    title={`${title} | ${siteConfig.title}`}
    description={`Die Geschichte hinter ${siteConfig.title}`}
>
    <div class="max-w-4xl mx-auto py-12 px-4">
        <div class="text-center mb-16">
            <h1 class="text-4xl md:text-5xl font-serif text-rose-950 mb-6">
                {mainHeading}
            </h1>
            {
                quote && (
                    <p class="text-xl text-rose-800/80 font-light italic max-w-2xl mx-auto">
                        {quote}
                    </p>
                )
            }
        </div>

        <div class="grid md:grid-cols-2 gap-12 items-center mb-20">
            <div
                class="aspect-[4/5] bg-rose-100 rounded-2xl overflow-hidden shadow-md rotate-2 transform hover:rotate-0 transition duration-500"
            >
                {
                    heroImage ? (
                        <Image
                            src={heroImage}
                            alt="Portrait"
                            class="w-full h-full object-cover"
                            width={800}
                            height={1000}
                        />
                    ) : (
                        <div class="w-full h-full flex items-center justify-center text-rose-300">
                            Kein Bild
                        </div>
                    )
                }
            </div>
            <div class="prose prose-rose prose-lg text-rose-900/90 font-sans">
                <Content />
            </div>
        </div>

        <div
            class="bg-rose-50 text-center p-12 rounded-3xl border border-rose-100"
        >
            <h2 class="text-3xl font-serif text-rose-950 mb-4">
                Lust auf mehr?
            </h2>
            <p class="text-rose-700 mb-8 max-w-lg mx-auto">
                St√∂bern Sie durch meine aktuellen Projekte oder besuchen Sie
                einen meiner Workshops.
            </p>
            <div class="flex flex-col md:flex-row gap-4 justify-center">
                <a
                    href="/projects"
                    class="bg-white border border-rose-200 text-rose-900 font-medium py-3 px-8 rounded-full hover:bg-rose-100 transition"
                >
                    Zu den Projekten
                </a>
                <a
                    href="/products"
                    class="bg-rose-600 text-white font-medium py-3 px-8 rounded-full hover:bg-rose-700 transition shadow-md"
                >
                    Zum Shop
                </a>
            </div>
        </div>
    </div>
</Layout>
