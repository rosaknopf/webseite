---
import { siteConfig } from "../data/siteConfig";
const today = new Date();
---

<footer class="bg-rose-100/50 border-t border-rose-200 mt-8 py-8">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
            <div class="font-serif text-xl font-bold text-rose-950" set:html={siteConfig.title.replace("Rosa", "<span class='text-rose-600'>Rosa</span>")}>
            </div>

            <div class="flex items-center gap-6 text-sm font-medium">
                <a
                    href={siteConfig.social.instagram}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-rose-800 hover:text-rose-600 transition"
                >
                    Instagram
                </a>
                <a
                    href={`mailto:${siteConfig.social.email}`}
                    class="text-rose-800 hover:text-rose-600 transition"
                >
                    Email
                </a>
                <span class="text-rose-300">|</span>
                <a href="/imprint" class="text-rose-800 hover:text-rose-600 transition">Impressum</a>
                <a href="/privacy" class="text-rose-800 hover:text-rose-600 transition">Datenschutz</a>
            </div>

            <div class="text-xs text-rose-800/60 text-center md:text-right">
                &copy; {today.getFullYear()} {siteConfig.title}.<br class="hidden md:block" />
                <span class="md:hidden"> </span>All rights reserved.
            </div>
        </div>
    </div>
</footer>
