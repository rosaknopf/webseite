---
import { siteConfig } from "../data/siteConfig";
const today = new Date();
---

<footer class="bg-gray-50 border-t border-gray-200 mt-12 py-12">
    <div class="container mx-auto px-4 text-center">
        <div class="font-serif text-xl font-bold text-gray-800 mb-4" set:html={siteConfig.title.replace("Rosa", "<span class='text-rose-500'>R</span>osa")}>
        </div>

        <div class="flex justify-center gap-6 mb-8 text-gray-600">
            <a
                href={siteConfig.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-rose-500 transition"
            >
                Instagram
            </a>
            <a
                href={`mailto:${siteConfig.social.email}`}
                class="hover:text-rose-500 transition"
            >
                Email
            </a>
        </div>

        <div class="text-sm text-gray-500 mb-8 space-x-4">
            <a href="/imprint" class="hover:text-gray-800 transition">Impressum</a>
            <a href="/privacy" class="hover:text-gray-800 transition">Datenschutz</a>
        </div>

        <div class="text-xs text-gray-400">
            &copy; {today.getFullYear()}
            {siteConfig.title}. All rights reserved. <br />
            Designed for Performance & Privacy.
        </div>
    </div>
</footer>
